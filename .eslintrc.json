{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": [
    "out/**/*.js"
  ],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "lines-around-comment": "error"
  },
  "overrides": [
    {
      "files": [
        "lib/*.js"
      ],
      "parserOptions": {
        "sourceType": "script"
      },
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": [
        "**/*.ts"
      ],
      "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
      ],
      "globals": {},
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "@typescript-eslint/no-parameter-properties": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-empty-function": "off"
      }
    },
    {
      "files": [
        "sample/**/*.js"
      ],
      "globals": {
        "p5s": "readonly",
        "fill": "readonly",
        "background": "readonly",
        "circle": "readonly"
      },
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": [
        "scripts/**/*.js",
        "./config.js"
      ],
      "env": {
        "es6": true,
        "node": true
      },
      "parserOptions": {
        "ecmaVersion": 2020
      }
    }
  ]
}
