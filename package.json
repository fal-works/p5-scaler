{
  "name": "@fal-works/p5-scaler",
  "description": "A small library for scaling p5.js sketches.",
  "version": "0.2.0-alpha",
  "author": "FAL",
  "bugs": {
    "url": "https://github.com/fal-works/p5-scaler/issues"
  },
  "dependencies": {
    "p5": "^1.1.9"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/p5": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.35.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "terser": "^5.5.1",
    "typedoc": "^0.20.0-beta.27",
    "typescript": "^4.1.3"
  },
  "directories": {
    "lib": "lib"
  },
  "eslintIgnore": [
    "*.min.js",
    "*.min.mjs",
    "types/**/*.ts"
  ],
  "files": [
    "lib",
    "types"
  ],
  "homepage": "https://github.com/fal-works/p5-scaler#readme",
  "jsnext:main": "lib/p5-scaler.mjs",
  "keywords": [],
  "license": "MIT",
  "main": "lib/p5-scaler.js",
  "module": "lib/p5-scaler.mjs",
  "optionalDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fal-works/p5-scaler.git"
  },
  "scripts": {
    "build": "run-s build-tsc build-es build-umd doc",
    "build-es": "run-s build-es:rollup build-es:format build-es:minify",
    "build-es:format": "eslint --fix ./lib/p5-scaler.mjs",
    "build-es:minify": "terser ./lib/p5-scaler.mjs -c -m -o ./lib/p5-scaler.min.mjs --comments --ecma 6",
    "build-es:rollup": "rollup -c ./rollup-config-es.js",
    "build-tsc": "tsc",
    "build-umd": "run-s build-umd:rollup build-umd:format build-umd:minify",
    "build-umd:format": "eslint --fix ./lib/p5-scaler.js",
    "build-umd:minify": "terser ./lib/p5-scaler.js -c -m -o ./lib/p5-scaler.min.js --comments --ecma 6",
    "build-umd:rollup": "rollup -c ./rollup-config-umd.js",
    "doc": "typedoc",
    "lint": "eslint --fix ./src/**/*.ts",
    "lint-js": "eslint --fix ./*.js"
  },
  "types": "types/index.d.ts"
}
